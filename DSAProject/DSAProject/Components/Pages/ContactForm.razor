@page "/contact-form"
@using DSAProject.Models
@using DSAProject.OperationsModule
@using DSAProject.UtilityModule
@inject ContactOperations contactOperations

<h3>Contact Form</h3>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form @onsubmit="HandleSubmit">
                <div class="form-group">
                    <label for="contactName">Name</label>
                    <input type="text" class="form-control" id="contactName" @bind="Contact.Name" placeholder="Enter contact name" required />
                </div>

                <div class="form-group">
                    <label for="contactPhone">Phone Number</label>
                    <input type="text" class="form-control" id="contactPhone" @bind="Contact.Phone" placeholder="Enter 5-digit phone number" required />
                    <small class="form-text text-muted">Phone number must start with '0' and be 5 digits long.</small>
                </div>

                <button type="submit" class="btn btn-primary">Save Contact</button>
                <button type="button" class="btn btn-secondary ml-2" @onclick="ClearForm">Clear</button>

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert alert-info mt-3">@Message</div>
                }
            </form>
        </div>
    </div>
</div>

@code {
    private Contact Contact { get; set; } = new Contact();
    private string Message { get; set; }

    private async Task HandleSubmit()
    {
        if (PhoneNumberValidator.ValidatePhoneNumber(Contact.Phone))
        {
            contactOperations.InsertContact(Contact.Name, Contact.Phone);
            Message = $"Contact '{Contact.Name}' has been saved successfully.";
            ClearForm();
        }
        else
        {
            Message = "Invalid phone number. Please ensure it starts with '0' and is exactly 5 digits.";
        }
    }

    private void ClearForm()
    {
        Contact = new Contact();
        Message = string.Empty;
    }
}
